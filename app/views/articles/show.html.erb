<div class="box">
  <div class="row justify-content-between px-3">
    <h3><%= @article.title %></h3>
    <p>
      <%= link_to edit_article_path do %>
        <i class="fas fa-pencil-alt"></i>
      <% end %>
      <%= link_to article_path(@article), method: :delete, data: { confirm: 'Delete?' } do %>
        <i class="fas fa-trash-alt"></i>
      <% end %>
    </p>
  </div>
  <img src=<%= @article.image %> alt="" class="img-content">
  <p><%= @article.content %></p>
</div>

